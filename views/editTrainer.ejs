<%- include('navbar') %>
<section class="editDog">

<div class="container-fluid">
  <div class="row">
    <div class="col"></div>
    <div class="col">
      <form
        action="/trainer/editTrainer/<%- result[0].trainer_id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <input
          class="form-control form-control-lg my-3"
          type="text"
          placeholder="Nombre"
          aria-label=".form-control-lg example"
          name="name"
          value="<%- result[0].name %> "
          required
        />
        <input
          class="form-control form-control-lg my-3"
          type="text"
          placeholder="Apellidos"
          aria-label=".form-control-lg example"
          name="last_name"
          value="<%- result[0].last_name %> "
          required
        />
        <input
          class="form-control form-control-lg my-3"
          type="text"
          placeholder="Numero de telefono"
          aria-label=".form-control-lg example"
          name="phone"
          value="<%- result[0].phone %> "
          required
        />
        <input
          class="form-control form-control-lg my-3"
          type="text"
          placeholder="Email"
          aria-label=".form-control-lg example"
          name="email"
          value="<%- result[0].email %> "
          required
        />
        <input
          class="form-control form-control-lg my-3"
          type="text"
          placeholder="Descripción héroe"
          aria-label=".form-control-lg example"
          name="description"
          value="<%- result[0].description %> "
          required
        />

        <div class="my-3">
          <label for="formFileLg" class="form-label"
            >Introduce una nueva imagen de perfil</label
          >
          <input
            class="form-control form-control-lg"
            id="formFileLg"
            type="file"
            name="img"
          />
        </div>
        <input
          class="form-control form-control-lg my-3"
          type="password"
          placeholder="Introduce una nueva contraseña"
          aria-label=".form-control-lg example"
          name="password"
          value="<%- result[0].password %> "
          required
        />

        <button type="submit" class="btn btn-primary mb-3">
          Guardar datos
        </button>
      </form>
      <br /><br />
    </div>
    <div class="col"></div>
  </div>
</div>
</section>
<%- include('footer') %>
